<h1>Listing data</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Uncompressed size</th>
    <th>Format</th>
    <th>Book</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @data.each do |datum| %>
  <tr>
    <td><%= datum.name %></td>
    <td><%= datum.uncompressed_size %></td>
    <td><%= datum.format %></td>
    <td><%= datum.book %></td>
    <td><%= link_to 'Show', datum %></td>
    <td><%= link_to 'Edit', edit_datum_path(datum) %></td>
    <td><%= link_to 'Destroy', datum, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

